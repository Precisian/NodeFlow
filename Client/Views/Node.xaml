<UserControl x:Class="Client.Views.Node"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:Client.Converters"
             xmlns:local="clr-namespace:Client.Views"
             mc:Ignorable="d" 
             d:DesignHeight="135" d:DesignWidth="150"
             Width="{Binding Width}" Height="{Binding Height}">

    <Grid MouseLeftButtonDown="Node_MouseLeftButtonDown">
        <!-- 노드 컨테이너 -->
        <Border Background="White" BorderBrush="Black" BorderThickness="1" CornerRadius="10">
            <StackPanel Margin="10">
                <!-- 상단 헤더 (색상 변경 가능) -->
                <Border Height="20" CornerRadius="5"
                        Background="{Binding NodeHeaderColor, Converter={StaticResource colorToBrushConverter}}">
                </Border>

                <!-- 작업명 텍스트 박스 -->
                <TextBlock Text="{Binding TaskName}" Margin="5,5,5,5"/>

                <!-- 날짜 및 담당자 필드 -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border BorderBrush="Gray" BorderThickness="1" Grid.Row="0" CornerRadius="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="시작일" Margin="2,2,2,2" Grid.Column="0"/>
                            <TextBlock Text="{Binding StartDate}" Grid.Column="1" Margin="2,2,2,2"/>
                        </Grid>
                    </Border>

                    <Border BorderBrush="Gray" BorderThickness="1" Grid.Row="1" CornerRadius="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="종료일" Margin="2,2,2,2"/>
                            <TextBlock Grid.Column="1" Text="{Binding EndDate}" Margin="2,2,2,2"/>
                        </Grid>
                    </Border>

                    <Border BorderBrush="Gray" BorderThickness="1" Grid.Row="2" CornerRadius="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="담당자" Margin="2,2,2,2"/>
                            <TextBlock Grid.Column="1" Text="{Binding Assignee}" Margin="2,2,2,2"/>
                        </Grid>
                    </Border>
                </Grid>
            </StackPanel>
        </Border>

        <!-- 좌측 연결점 -->
        <Ellipse x:Name="InputConnector" Width="15" Height="15" Fill="White"
                 Stroke="Black" StrokeThickness="1" HorizontalAlignment="Left" VerticalAlignment="Center"
                 Margin="-7.5,0,0,0" Cursor="Hand">
            <Ellipse.InputBindings>
                <!-- 마우스 클릭 시 ConnectNodesCommand를 실행하며, 현재 노드를 전달합니다. -->
                <MouseBinding MouseAction="LeftClick" Command="{Binding ConnectNodesCommand}" CommandParameter="{Binding}" />
            </Ellipse.InputBindings>
        </Ellipse>

        <!-- 우측 연결점 -->
        <Ellipse x:Name="OutputConnector" Width="15" Height="15" Fill="White"
                 Stroke="Black" StrokeThickness="1" HorizontalAlignment="Right" VerticalAlignment="Center"
                 Margin="0,0,-7.5,0" Cursor="Hand">
            <Ellipse.InputBindings>
                <!-- 마우스 클릭 시 ConnectNodesCommand를 실행하며, 현재 노드를 전달합니다. -->
                <MouseBinding MouseAction="LeftClick" Command="{Binding ConnectNodesCommand}" CommandParameter="{Binding}" />
            </Ellipse.InputBindings>
        </Ellipse>
    </Grid>
</UserControl>
